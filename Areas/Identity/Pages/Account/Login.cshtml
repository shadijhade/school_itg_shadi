@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

	
    <section class="h-100" >
		<div class="container h-100" >
			<div class="row justify-content-sm-center h-100" >
				<div class="col-xxl-4 col-xl-5 col-lg-5 col-md-7 col-sm-9" >
					<div class="text-center my-5">
						<img src="~/images/login-img.png" alt="logo" width="100">
					</div>
					<div class="card shadow-lg" style="border-radius:30px">
						<div class="card-body p-5" >
							<h1 class="fs-4 card-title fw-bold mb-4 text-center" sstyle="color:#09333f">Admin Gate</h1>
							<form id="account" method="post">
              
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label">Username</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-warning" asp-route-returnUrl="@Url.Action("Admin", "Home", new { area = "" })" >Log in</button>
                </div>
                
            </form>
						</div>
						<div class="card-footer py-3 border-0">
							<div class="text-center">
								Not Admin ? back to <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><b style="color:#fca126">Student Gate</b></a>
							</div>
						</div>
					</div>
					<div class="text-center mt-5 text-muted">
						Admin Gate login
					</div>
				</div>
			</div>
		</div>
	</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
