@model IEnumerable<school_itg_shadi.Models.Client>

@{
    ViewData["Title"] = "All Clients";
}
<div class="container-fluid">
    
<button type="button" class="btn btn-info btn-lg" style="box-shadow:  14px 14px 28px #c4c5c6,
             -14px -14px 28px #ffffff; "><a style="text-decoration: none;color:#fcfcfc" asp-action="Create" >ADD NEW Client</a></button>
<div class="flex-grow-1">
    <h3 class="text-center col" style="color:#333">All Clients</h3>
    <div class="d-flex justify-content-xxl-center" style="background: linear-gradient(145deg, #ffffff, #dfe0e1) ;margin-top:30px ;margin-left:60px ;margin-right:60px; padding:0px;  border-radius:30px;box-shadow:  14px 14px 28px #c4c5c6,
             -14px -14px 28px #ffffff;  border-radius:30px !important">
    
<div class="table-responsive">
    
<table class="table table-striped table-hover table-borderless ">
    <thead class="text-center" style="color:#09333f">
        <tr>
            <th scope="col">
                User id
            </th>
			<th scope="col">
                Full name
            </th>
            <th scope="col">
                User name
            </th>
            <th scope="col">
                DateOfBirth
            </th>
             <th scope="col">
                Gender
            </th>
			<th scope="col">
                Type
            </th>
			<th scope="col">
                Type id
            </th>
			<th scope="col">
                
            </th>
			<th scope="col">
               Manage  
            </th>
            <th scope="col">
               
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td scope="row" class="text-center">
                 @Html.DisplayFor(modelItem => item.UserId)
            </td>
			<td scope="row">
                 @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td scope="row">
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
			<td scope="row">
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
			<td scope="row">
               @Html.DisplayFor(modelItem => item.Gender.GenderDesc)
            </td>
			<td scope="row">
               @Html.DisplayFor(modelItem => item.Type.TypeDesc)
            </td>
			<td scope="row" class="text-center">
                @Html.DisplayFor(modelItem => item.Type.TypeId)
            </td>
			<td scope="row">
                
            </td>
			
          
            <td scope="row">
               
                | <button type="button" class="btn btn-outline-info"><a style="text-decoration: none;color:#09333f" asp-action="Edit" asp-route-id="@item.UserId">Edit</a></button>
				| <button type="button" class="btn btn-outline-primary"><a style="text-decoration: none;color:#09333f" asp-action="Details" asp-route-id="@item.UserId">Details</a></button>
				| <button type="button" class="btn btn-outline-danger"><a style="text-decoration: none;color:#09333f" asp-action="Delete" asp-route-id="@item.UserId">Delete</a></button>
                
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
</div>
