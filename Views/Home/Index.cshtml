@{
    ViewData["Title"] = "Home Page";
}

<section class="p-5 my-4">
<div class="text-left" style="color:#09333f">
    <h1 class="display-6"><i class="fa-solid fa-graduation-cap" style="color:#38b6ff"></i> marks are finally here <b style="color:#ffca2c"> | </b></h1>

</div>
</section>
<section class="vh-90 container-sm" style="margin:0 auto; color:#09333f; background: linear-gradient(145deg, #ffffff, #dfe0e1);
box-shadow:  14px 14px 28px #c4c5c6,
             -14px -14px 28px #ffffff;  border-radius:30px !important ">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">

        <div class="px-0 ms-xl-4">
          <span class="h1 fw-bold mb-0"><img src="~/images/login-img.png" alt="logo" width="160" height="160"></span>
        </div>

        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

          <form asp-controller="StudentMarks" asp-action="List" style="width: 23rem;">

            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Students marks</h3>

            <div class="form-outline mb-4">
              <input name="SearchString" type="text" id="form2Example18" class="form-control form-control-lg" placeholder="type your name in english" />
			<br />
              <label class="form-label" for="form2Example18"></label> 
            </div>

           

            <div class="pt-1 mb-4">
              <button class="btn btn-info btn-lg btn-block" type="submit" value="Filter">search</button>
			<button class="btn btn-info btn-lg  btn-warning" type="submit" value="Filter">see all marks</button>
			 <h1 class="display-6 text-right" style="font-size:20px"><b style="color:red"> | </b> Best wishes</h1>
            </div>
            
          </form>

        </div>
       
      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="~/images/sectionbg.png" alt="Login image" class="w-110 vh-100" style="object-fit: cover; object-position:inherit;  border-radius:30px">
      </div>
	
    </div>
	
  </div>

</section>
<style>
	html {
		scroll-behavior: smooth;
	}
</style>