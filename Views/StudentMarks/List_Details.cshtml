@model school_itg_shadi.Models.StudentMark

@{
    ViewData["Title"] = "Details";
}
<section class="p-5 my-4">
<div class="text-left" style="color:#09333f">
    <h1 class="display-6"><b style="color:#ffca2c"> |  Student Details and Marks</b><br />|Name: @Html.DisplayFor(model => model.Student.Name)<br/>|Student ID: @Html.DisplayFor(model => model.StudentNameNavigation.UserId)</h1>
    <br />
</div>
</section>
<div class="container">



    <div class="row align-items-center g-3">
        <div class="col-auto">
            <button class="btn btn-warning btn-lg " ><a style="text-decoration: none;color:#09333f" asp-action="List" > back </a></button>
        </div>
    </div>

<div class="table-responsive">
<table class="table table-striped table-hover table-borderless text-center ">
    <thead style="font-size:1.65rem">
        <tr>
			<th scope="col">
                English
            </th>
            <th scope="col">
                Math
            </th>
            <th scope="col">
                Physics
            </th>
			 <th scope="col">
                Chemistry
            </th>
			 <th scope="col">
                History
            </th>
            
        </tr>
    </thead>
    <tbody  style="font-size:1.65rem">

        <tr>
			<td scope="row">
                 @Html.DisplayFor(model => model.Physics)
            </td>
            <td scope="row">
                @Html.DisplayFor(model => model.Math)
            </td>
            <td scope="row">
                 @Html.DisplayFor(model => model.Physics)                         
            </td>
			<td scope="row">
                 @Html.DisplayFor(model => model.Chemistry)                         
            </td>
			<td scope="row">
                 @Html.DisplayFor(model => model.History)                         
            </td>
        </tr>
    </tbody>
</table>
</div>
</div>
